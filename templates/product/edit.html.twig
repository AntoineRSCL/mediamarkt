{% extends "base.html.twig" %}

{% block title %}Modification du produit {{product.name}}{% endblock %}

{% form_theme myForm 'product/_collection.html.twig' %} 

{% block body %}
    <div class="container">
        <h1>Modification du produit : <strong>{{product.name}}</strong></h1>

        {{form_start(myForm)}}
        
            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-warning mt-3">Modifier</button>

        {{form_end(myForm)}}
    </div>
{% endblock %}

{% block javascripts %}
    {{encore_entry_script_tags('produit')}}
{% endblock %}